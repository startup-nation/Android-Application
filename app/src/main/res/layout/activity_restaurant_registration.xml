<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestaurantRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Registration"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="monospace"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/ownerName"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Owner Name"
                        android:layout_height="50dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/ownerEmail"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Owner Email"
                        android:layout_height="50dp"
                        android:inputType="textEmailAddress"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/ownerPhone"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Owner Phone"
                        android:layout_height="50dp"
                        android:inputType="number"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/restaurantName"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Restaurant Name"
                        android:layout_height="50dp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/restaurantEmail"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Restaurant Email"
                        android:layout_height="50dp"
                        android:inputType="textEmailAddress"
                        />


                </RelativeLayout>



                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/restaurantPhone"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Restaurant Phone"
                        android:layout_height="50dp"
                        android:inputType="phone"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/restaurantAddress"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Restaurant Address"
                        android:layout_height="50dp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Password"
                        android:layout_height="50dp"
                        android:inputType="textPassword"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:hint="Confirm Password"
                        android:layout_height="50dp"
                        android:inputType="textPassword"
                        />


                </RelativeLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|end"
        android:padding="5dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerBtn"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:text="Done"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textAllCaps="false"
            app:icon="@drawable/doneicon"
            app:iconGravity="end"
            app:iconSize="30dp"

            />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>